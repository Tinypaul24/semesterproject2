<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HeatProductionSystem.App"
             xmlns:local="using:HeatProductionSystem"
             xmlns:conv="using:HeatProductionSystem.Converters"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <SimpleTheme />
    </Application.Styles>

     <Application.Resources>
         <conv:BoolToOnOffConverter x:Key="BoolToOnOffConverter"/>
         <SolidColorBrush x:Key="SystemControlBackgroundBaseLowBrush">#22000000</SolidColorBrush>
         <SolidColorBrush x:Key="SystemControlHighlightAltBaseHighBrush">#60FFFFFF</SolidColorBrush>
    </Application.Resources>

</Application>

